{
  "server": {
    "port": "8080",
    "host": "0.0.0.0",
    "read_timeout": 30,
    "write_timeout": 30,
    "idle_timeout": 60
  },
  "database": {
    "host": "localhost",
    "port": 3306,
    "username": "root",
    "password": "",
    "database": "golandpro",
    "charset": "utf8mb4"
